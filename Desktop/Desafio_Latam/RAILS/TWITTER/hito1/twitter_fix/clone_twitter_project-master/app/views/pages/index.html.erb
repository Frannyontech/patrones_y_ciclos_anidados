<h1>Tweets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Tweet</th>
      <th>User</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= tweet.user.name %></td>
        <td><%= image_tag(tweet.user.profile_url, size: "20x20") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

