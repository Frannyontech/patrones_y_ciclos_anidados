<%= link_to 'New Tweet', new_tweet_path, class: "btn btn-danger" %>
<h1 class="text-center">Tweets</h1>


<% @tweets.each do |tweet| %>
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-md-4 text-center">
        <td><%= image_tag(tweet.user.profile_url, size: "100x100") %></td>
      </div>
      <div class="col-md-8">
      <div class="card-body">
            <h5 class="card-title"><td><%= tweet.user %></td>:</h5>
            <p class="card-text"> <td><%= tweet.content %></td></p>
            <% if current_user.like?(tweet.id) %>
              <td><%= link_to "dislike", root_path%>
            <% else%>
              <td><%= link_to "like", tweet_likes_path(tweet.id), method: :post %></td>
            <% end %>
            <p class="card-text"><small class="text-muted"><%= tweet.created_at %></small></p>
      </div>
      </div>
    </div>  
  </div>
<% end %>

<%= paginate @tweets %>

<div class="container mx-auto">
    <div class="col-md-8 offset-md-3 mb-4">
        <%= link_to_next_page @tweets, 'Mostrar mÃ¡s tweets' %>
        <br>
        <%= link_to_prev_page @tweets, 'Volver a tweets anteriores' %>
    </div>
</div>